<?xml version="1.0" encoding="utf-8"?>
<!-- Expanded overlay - full control panel -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expandedLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/overlay_expanded_background"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="12dp">

    <!-- Header with title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Quick Controls"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:alpha="0.8"
        android:layout_marginBottom="12dp" />

    <!-- Volume Up Button -->
    <ImageView
        android:id="@+id/volumeUpButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:background="@drawable/overlay_button_background"
        android:contentDescription="@string/volume_up"
        android:padding="16dp"
        android:src="@drawable/ic_volume_up"
        android:tint="@android:color/white"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Volume Percentage Display -->
    <TextView
        android:id="@+id/volumeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="50%"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:minWidth="60dp"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginVertical="12dp" />

    <!-- Volume Down Button -->
    <ImageView
        android:id="@+id/volumeDownButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:background="@drawable/overlay_button_background"
        android:contentDescription="@string/volume_down"
        android:padding="16dp"
        android:src="@drawable/ic_volume_down"
        android:tint="@android:color/white"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Divider with gradient -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="16dp"
        android:background="#30FFFFFF" />

    <!-- Action buttons in a nice layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Lock Screen Button -->
        <ImageView
            android:id="@+id/lockScreenButton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="@drawable/overlay_button_background"
            android:contentDescription="@string/lock_screen"
            android:padding="14dp"
            android:src="@drawable/ic_lock"
            android:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lock"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:alpha="0.7"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Flashlight Button -->
        <ImageView
            android:id="@+id/flashlightButton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="@drawable/overlay_button_background"
            android:contentDescription="@string/flashlight"
            android:padding="14dp"
            android:src="@drawable/ic_flashlight"
            android:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flash"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:alpha="0.7"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="#20FFFFFF" />

    <!-- Collapse Button -->
    <ImageView
        android:id="@+id/collapseButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:contentDescription="Collapse"
        android:padding="8dp"
        android:src="@drawable/ic_collapse"
        android:tint="@android:color/white"
        android:alpha="0.6" />

</LinearLayout>
