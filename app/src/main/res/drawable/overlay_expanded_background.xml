<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item
        android:left="0dp"
        android:top="4dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#60000000" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    
    <!-- Main background with gradient -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#E61E1E2E"
                android:endColor="#E6121220"
                android:type="linear" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Subtle border -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#40FFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>
